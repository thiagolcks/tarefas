<html>

<head>
	<title>Lista de Tarefas</title>
	<link rel="stylesheet" href="https://bootswatch.com/cerulean/bootstrap.min.css">
	<style>
		.remover:checked+span {
			color: red;
		}

		.lista-tarefas {
			list-style: none;
		}
	</style>
</head>

<body>
	<nav class="navbar navbar-inverse">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false"
				 aria-controls="navbar">
					  <span class="sr-only">Toggle navigation</span>
					  <span class="icon-bar"></span>
					  <span class="icon-bar"></span>
					  <span class="icon-bar"></span>
					</button>
				<a class="navbar-brand" href="#">Lista de Tarefas</a>
			</div>
			<div id="navbar" class="collapse navbar-collapse">
				<ul class="nav navbar-nav">

				</ul>
			</div>
			<!--/.nav-collapse -->
		</div>
	</nav>

	<div class="container">
		<form method="post" action="/tarefa/adicionar">
			<label>Adicionar Tarefa</label>
			<input type="text" name="tarefa" placeholder="Adicionar Tarefa">
			<input type="submit" value="Adicionar">
		</form>

		<%= titulo %>

			<form method="post" action="/tarefa/remover">
				<ul class="lista-tarefas">
					<% tarefas.forEach(function(tarefa){ %>
						<li>
							<label>
                <input type="checkbox" name="tarefas"
                       class="remover" 
                       value="<%= tarefa %>">
                       <span><%= tarefa %></span>
			</label>
						</li>
						<% }) %>
				</ul>
				<input type="submit" value="Remover">
			</form>

			<div class="well">
				<h3>Contato</h3>
				Nome:
				<%= contato.nome %><br> Companhia:
					<%= contato.companhia %><br> Telefone:
						<%= contato.telefone %><br>
			</div>

			<div class="well">
				<h3>Editar Contato</h3>
				<form method="post" action="/contato/editar">
					<label>Nome</label><br>
					<input type="text" name="nome" placeholder="Nome">
					<br><br>
					<label>Companhia</label><br>
					<input type="text" name="companhia" placeholder="Companhia">
					<br><br>
					<label>Telefone</label><br>
					<input type="text" name="telefone" placeholder="Telefone">
					<br><br>
					<input type="submit" value="Editar">
				</form>
			</div>
	</div>
</body>

</html>